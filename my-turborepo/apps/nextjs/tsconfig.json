{
  "extends": "@vanni/tsconfig/base.json",
  "compilerOptions": {
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "jsx": "preserve",
    "types": [],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "module": "esnext"
  },
  "include": [
    ".",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}