{
  "name": "@vanni/ui",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./*": [
      "./src/*.tsx",
      "./src/*.ts"
    ]
  },
  "scripts": {
    "add": "pnpm dlx shadcn-ui add",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "ui-add": "pnpm dlx shadcn-ui add && prettier src --write --list-different"
  },
  "prettier": "@vanni/prettier-config",
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "next-themes": "^0.3.0",
    "react-hook-form": "^7.66.0",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/react": "^18.3.26",
    "@vanni/eslint-config": "workspace:*",
    "@vanni/prettier-config": "workspace:*",
    "@vanni/tailwind-config": "workspace:*",
    "@vanni/tsconfig": "workspace:*",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "react": "18.3.1",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "react": "18.3.1",
    "zod": "^3.23.8"
  }
}
